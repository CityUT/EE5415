<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/report_image"
        android:layout_width="243dp"
        android:layout_height="271dp"

        android:layout_marginStart="24dp"
        android:paddingTop="40dp"
        android:paddingBottom="10dp"
        android:src="@drawable/bot_fit"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="88dp" />

    <TextView
        android:id="@+id/report_result"
        android:layout_width="329dp"
        android:layout_height="42dp"

        android:layout_marginStart="92dp"
        android:baselineAligned="false"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/bmi_result"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/report_image"
        tools:layout_editor_absoluteY="151dp" />

    <TextView
        android:id="@+id/report_advice"
        android:layout_width="332dp"
        android:layout_height="51dp"

        android:layout_marginStart="4dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/advice_average"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/report_result"
        app:layout_constraintTop_toBottomOf="@+id/report_result"
        app:layout_constraintVertical_bias="0.36" />

</androidx.constraintlayout.widget.ConstraintLayout>